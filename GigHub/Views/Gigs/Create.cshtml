@model GigHub.ViewModels.GigFormViewModel
@{
    ViewBag.Title = "Add a Gig";
}

<h2>Add a Gig</h2>

@using (Html.BeginForm("Create", "Gigs"))
{
    <div class="alert alert-info">All fields are <strong>Required</strong>.</div>
    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => m.Venue, new {@class="form-control", autofocus = "autofocus"} )
        @Html.ValidationMessageFor(m => m.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new {@class="form-control", placeholder = "eg. 19/5/2017" } )
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor( m => m.Time )
        @Html.TextBoxFor( m => m.Time, new { @class = "form-control", placeholder = "eg. 20:45" } )
        @Html.ValidationMessageFor( m => m.Time )
    </div>
    <div class="form-group">
        @Html.LabelFor( m => m.Genre )
        @Html.DropDownListFor( m => m.Genre, new SelectList(Model.Genres, "Id", "Name"),"Select Genre" , new { @class = "form-control" } )
        @Html.ValidationMessageFor( m => m.Genre )
    </div>
    @Html.AntiForgeryToken()
    <input type="submit" value="Create" class="btn btn-primary"/>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");
}
